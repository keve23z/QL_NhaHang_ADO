@model IEnumerable<QL_NhaHang_ADO.Models.PhieuXuatKho>

@{
    ViewBag.Title = "Danh Sách Phiếu Xuất Kho";
    Layout = "~/Views/Share/layuot_admin.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Danh Sách Phiếu Xuất Kho</h2>
        <a href="@Url.Action("ThemPhieuXuatKho", "Admin_XuatKho")" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Tạo Phiếu Xuất Kho Mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="bg-primary text-white text-center">
                <tr>
                    <th>Mã Phiếu Xuất Kho</th>
                    <th>Mã Nhân Viên</th>
                    <th>Ngày Xuất Kho</th>
                    <th>Tổng Tiền</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-danger">Không có phiếu xuất kho nào!</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.MaXuatKho</td>
                            <td>@item.MaNV</td>
                            <td>@item.NgayXuatKho.ToString("dd/MM/yyyy")</td>
                            <td>@String.Format("{0:N0} đ", item.TongTien)</td>
                            <td>
                                <a href="@Url.Action("chitietXuatKho", "Admin_XuatKho", new { MaNhapKho = item.MaXuatKho })" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .btn {
        font-size: 14px;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .text-primary {
        font-weight: bold;
    }
</style>
