<div>
    @model IEnumerable<QL_NhaHang_ADO.Models.HoaDon>

@{
    Layout = null;
}


    <table class="table table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Ma)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().MaBan)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().MaKH)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().MaNV)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().MaGiamGia)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NgayLap)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().TongTien)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().HinhThuc)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().TenKhachHang)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().GiaGiam)</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Ma)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaBan)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaKH)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaNV)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaGiamGia)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgayLap)</td>
                    <td>@Html.DisplayFor(modelItem => item.TongTien)</td>
                    <td>@Html.DisplayFor(modelItem => item.HinhThuc)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenKhachHang)</td>
                    <td>@Html.DisplayFor(modelItem => item.GiaGiam)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("ShowCTHD", new { ma = item.Ma })" class="btn btn-sm btn-info">Xem Chi Tiết</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>