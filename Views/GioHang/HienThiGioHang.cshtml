                                            var existingItem = cart.find(item => item.MaMonAn === maMonAn);

                                            if (existingItem) {
                                                existingItem.SoLuong = 0;
                                            } else {
                                                var newItem = {
                                                    MaMonAn: maMonAn,
                                                    TenMonAn: tenMonAn,
                                                    DonGia: donGia,
                                                    SoLuong: SoLuong
                                                };
                                                cart.push(newItem);
                                            }

                                            // Lưu giỏ hàng vào sessionStorage
                                            sessionStorage.setItem("Cart", JSON.stringify(cart));

