                                            // Hiển thị thông báo xóa thành công
                                            Swal.fire({
                                                title: "Đã xóa!",
                                                text: "Sản phẩm đã được xóa khỏi giỏ hàng.",
                                                icon: "success"
                                            });
                                        }
                                    },
                                    error: function (err) {
                                        console.log('Error:', err);
                                        Swal.fire({
                                            title: "Lỗi!",
                                            text: "Không thể xóa sản phẩm. Vui lòng thử lại.",
                                            icon: "error"
                                        });
                                    }
                                });
                            }
                        });
                    }

                </script>

            </div>
           
        </div>
    </div>
</aside>

